<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Seinfeld Quotes</title>
            <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
            <link rel="stylesheet" href="style.css" />
            <noscript><link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
            <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Bangers" rel="stylesheet">
            <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Raleway&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        </head>
    </head>    
    <body>
        <section>
            <br>
            <h1 class="centered-h1 bangers-font">Seinfeld</h1>
            <br>
            <br><br><br>
            <div>
                
                <h2 class="press transition-effect" >A quote from your favorite show will appear here.</h2>
                <br>
                <h3 class="transition-effect"></h3> <span class='press likeAmount likes transition-effect' >4</span> <span class='likes fa fa-thumbs-up transition-effect' id="thumbsUpIcon"></span>
                
            </div>
            <button class="centered-h1 bangers-font">Get a quote</button>
             <!-- <div class="image">  -->
                <br><br>
                <img src="" alt="" id="quoteImage" class="transition-effect" /> 
            <!-- </div>  -->
        </section>
        <!-- <section class = "commentSection">
            <h2> Comments</h2>
        </section> -->
        <section class = "topTen">
            <h2> Top Ten Quotes</h2>
            <ol>
                <br>
                <li class="top"></li>
                <br>
                <li class="second"></li>
                <br>
                <li class="third"></li>
                <br>
                <li class="fourth"></li>
                <br>
                <li class="fifth"></li>
                <br>
                <li class="sixth"></li>
                <br>
                <li class="seventh"></li>
                <br>
                <li class="eighth"></li>
                <br>
                <li class="ninth"></li>
                <br>
                <li class="tenth"></li>
            </ol>
        </section>
        <section class="commentSection">
            <h2>Comments</h2>
            <form action="/post-comment" method="POST">
              <div class="comment-input">
                <textarea id="text" name="text" rows="4" cols="50" placeholder="Type here to leave a comment" required></textarea>
                <button type="submit">Submit</button>
              </div>
            </form>
            <% if (noComments) { %>
            <p>No comments available.</p>
            <% } else { %>
            <ul class="commentList">
              <% comments.forEach(comment => { %>
              <li class="comment">
                        <div class="comment-header">
                          <div class="comment-name"><%= comment.name %></div>
                          <div class="comment-date"><%= comment.date.toDateString() %></div>
                        </div>
                        <div class="comment-text"><%= comment.text %></div>
                        <div class = "comment-actions"> 
                            <div class="comment-likes">
                            <span><%= comment.likes %> <i class="fa fa-thumbs-up"></i></span>
                            </div>
                            <div class = "comment-delete">
                                <span class='fa fa-trash'></span>
                            </div>
                        </div>
                      </li>
                      <% }); %>
                    </ul>
                    <% } %>
        </section> 
    <script src="main.js"></script>

    </body>
</html> 
